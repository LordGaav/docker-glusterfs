#cloud-config

coreos:
  etcd:
      #generate a new token for each unique cluster from https://discovery.etcd.io/new
      <%= @etcd_discovery %>
      addr: $public_ipv4:4001
      peer-addr: $public_ipv4:7001
  units:
    - name: etcd.service
      command: start
    - name: fleet.service
      command: start
    - name: docker-tcp.socket
      command: start
      enable: true
      content: |
        [Unit]
        Description=Docker Socket for the API
        [Socket]
        ListenStream=4243
        Service=docker.service
        BindIPv6Only=both
        [Install]
        WantedBy=sockets.target
    - name: glusterfs-data.service
      command: start
      enable: true
      content: |
        [Unit]
        Description=glusterfs data
        After=docker.service
        [Service]
        Type=oneshot
        RemainAfterExit=yes
        ExecStartPre=/usr/bin/docker pull paulczar/glusterfs:latest
        ExecStart=/bin/sh -c "/usr/bin/docker inspect glusterfs-data >/dev/null 2>&1 || \
          docker run --name glusterfs -v /export paulczar/glusterfs:latest true"
    - name: glusterfs.service
      command: <%= @command %>
      enable: true
      content: |
        [Unit]
        Description=glusterfs
        After=glusterfs-data.service
        [Service]
        Restart=always
        EnvironmentFile=/etc/environment
        TimeoutStartSec=20m
        ExecStartPre=/usr/bin/docker pull paulczar/glusterfs:latest
        ExecStart=/bin/sh -c "/usr/bin/docker run --rm --cap-add=SYS_ADMIN \
          -p 111:111 -p 24007:24007 -p 2049:2049 \
          -p 38465:38465 -p 38466:38466 -p 38467:38467 \
          -p 1110:1110 -p 4045:4045 -e PUBLISH=24007 \
          -e EXPECTED_MEMBERS=2 -e DEBUG=1 \
          -e HOST=$COREOS_PRIVATE_IPV4 paulczar/glusterfs:latest bin/boot"
        ExecStop=/usr/bin/docker stop database
write_files:
  - path: /etc/motd
    content: "Gluster Cluster Demo\n"
  - path: /etc/profile.d/db-functions.sh
    permissions: '0755'
    content: |
      function nse() {
        sudo nsenter --pid --uts --mount --ipc --net --target $(docker inspect --format="{{ .State.Pid }}" $1)
      }
      function glusterfs() {
        sudo nsenter --pid --uts --mount --ipc --net --target $(docker inspect --format="{{ .State.Pid }}" glusterfs)
      }
      function rebuild() {
        docker build -t paulczar/glusterfs /home/core/share
      }
      function cleanup() {
        etcdctl rm --recursive /glusterfs
      }
